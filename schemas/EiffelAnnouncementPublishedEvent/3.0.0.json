{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "meta": {"$ref": "../EiffelMetaProperty/1.0.0.json"},
    "data": {
      "type": "object",
      "properties": {
        "heading": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "uri": {
          "type": "string"
        },
        "severity": {
          "type": "string",
          "enum": ["MINOR", "MAJOR", "CRITICAL", "BLOCKER", "CLOSED", "CANCELED"]
        },
        "customData": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string"
              },
              "value": {
              }
            },
            "required": [
              "key",
              "value"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "heading",
        "body",
        "severity"
      ],
      "additionalProperties": false
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "target": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
          }
        },
        "required": [
          "type",
          "target"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "meta",
    "data",
    "links"
  ],
  "additionalProperties": false
}
